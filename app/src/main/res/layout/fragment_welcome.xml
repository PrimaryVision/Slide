<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/backdrop_welcome"
        android:layout_height="match_parent"/>
   <ImageView
      android:src="@drawable/slogo"
       android:layout_above="@+id/welcome_appIcon"
       android:layout_width="match_parent"
       android:layout_centerHorizontal="true"
       android:layout_height="100dp"
       />
    <ImageView
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:id="@+id/welcome_appIcon"
        android:src="@drawable/ic_launcher"
        android:layout_height="140dp" />

    <!-- Bottom container for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backup_btn_restore_file"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:id="@+id/welcome_restore"
            android:gravity="left|center_vertical" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_start"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:id="@+id/welcome_getStarted"
            android:gravity="right|center_vertical" />
    </LinearLayout>
</RelativeLayout>
